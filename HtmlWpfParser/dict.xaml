<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:local="clr-namespace:HtmlWpfParser">

    <Style x:Key="ListViewItemText">
        <Setter Property="Control.FontFamily" Value="Consolas" />
        <Setter Property="Control.FontSize" Value="16" />
        <Setter Property="Control.FontWeight" Value="Bold" />
        <Setter Property="Control.Margin" Value="5,5,5,5" />
    </Style>
    <Style x:Key="ButtonStyle" BasedOn="{StaticResource ListViewItemText}">
        <Setter Property="Control.FontSize" Value="18" />
        <Setter Property="Control.Background" Value="LightSlateGray"/>
    </Style>

    <Style x:Key="ExpanderStyle">
        <Setter Property="Control.FontSize" Value="20" />
        <Setter Property="Control.Background" Value="LightGray" />
        <Setter Property="Control.FontWeight" Value="Bold" />
    </Style>

    <Style x:Key="DetailText" BasedOn="{StaticResource ListViewItemText}">
        <Setter Property="Control.Foreground" Value="Brown" />
    </Style>

    <Style x:Key="DetailHeader" BasedOn="{StaticResource ListViewItemText}">
        <Setter Property="Control.Foreground" Value="DarkGreen" />
        <Setter Property="Control.FontStyle" Value="Italic" />
    </Style>
</ResourceDictionary>